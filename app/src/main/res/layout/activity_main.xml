<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#002851"
        android:padding="@dimen/inner_frame_layout_padding"
        app:layout_boxedEdges="all">


        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myGame"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_testview"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#002851" />

                <TextView
                    android:id="@+id/rivalGame"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_testview"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#002851" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mySet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_testview"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#002851" />

                <TextView
                    android:id="@+id/rivalSet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_testview"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#002851" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_testview"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#002851" />

                <TextView
                    android:id="@+id/rivalPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/custom_testview"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#002851" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#002851"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/me2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#00986d"
                    android:gravity="center"
                    android:onClick="pointForMe"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/rival2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#d8225b"
                    android:gravity="center"
                    android:onClick="pointForRival"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tieBreakLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/meTieBreak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:onClick="pointForMe"
                android:text="0"
                android:textColor="#002851"
                android:textSize="48sp" />

            <Button
                android:id="@+id/rivalTieBreak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:onClick="pointForRival"
                android:text="0"
                android:textColor="#002851"
                android:textSize="48sp" />
        </LinearLayout>
    </FrameLayout>
</androidx.wear.widget.BoxInsetLayout>