<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp">

        <Button
            android:id="@+id/BtnNewMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:background="@drawable/custom_button_round_dark"
            android:onClick="newMatchClick"
            android:text="@string/button_new_macth" />

        <Button
            android:id="@+id/BtnBackMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:background="@drawable/custom_button_round_dark"
            android:onClick="backMatchClick"
            android:text="@string/button_back_macth" />

        <Button
            android:id="@+id/BtnInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:background="@drawable/custom_button_round_dark"
            android:onClick="infoClick"
            android:text="@string/button_Info" />

        <Button
            android:id="@+id/BtnHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:background="@drawable/custom_button_round_dark"
            android:onClick="helpClick"
            android:text="@string/button_Help" />

        <Button
            android:id="@+id/BtnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:background="@drawable/custom_button_round_dark"
            android:onClick="aboutClick"
            android:text="@string/button_About" />

        <Button
            android:id="@+id/BtnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:background="@drawable/custom_button_round_dark"
            android:backgroundTint="#D61010"
            android:onClick="exitClick"
            android:text="@string/button_Exit"
            android:textColor="@color/textDark" />

    </LinearLayout>

</ScrollView>
